<%- include('partials/header') %>

<head>
  <link rel="stylesheet" href="/blog.css">
</head>

<div>
  


    <div class="container p-5">
      <div class="row">
        <% for(let i in Interview){ %>
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">



          <div class="card">
            <img class="card-img" src="<%= Interview[i].image %>"
              alt="Bologna">
            <div class="card">
              <a href="/interview" class="btn btn-light btn-sm"><%= Interview[i].type %></a>
            </div>


            <div class="card-body">
              <h4 class="card-title"><%= Interview[i].title %></h4>
              <div class="card-footer text-muted d-flex justify-content-end bg-transparent border-top-0">
                <div class="views "><%= Interview[i].date%>
                </div>
              </div>

              <% if(Interview[i].content.length>25){%>
              <%    str1=Interview[i].content;%>
              <%     str1=str1.substring(0,100);%>
                <p class="card-text"><%= str1 %> . . . </p>
              <% } else{%>
                <%     str1=Interview[i].content; %>
                <p class="card-text"><%= str1 %></p>
              <% }%>
                <a href="/content/?id=<%= Interview[i].id %>" class="btn btn-info">Read More</a>
                <p class="card-text"><small class="text-muted"><i class="fa fa-eye"></i> <%=Interview[i].count %></small></p>
            </div>
          </div>
        </div>
        <% } %>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>
  </body>

  </html>